@model AccountRegisterVM

@{ViewBag.Title = "Register";}

<div id="viewHeader"><img src="~/imgs/pen.png"/><br />
    Skapa ny lärare</div>
<div>@Model.Message</div>
    
<form asp-controller="Home" asp-action="Register">
    <input asp-for="@Model.OldClassroomName" type="hidden"/>
    @*<label asp-for="@Model.RegUsername"></label>*@
    <input asp-for="@Model.RegUsername" placeholder="Användarnamn" />
    <span asp-validation-for="@Model.RegUsername"></span>
    <br />
    @*<label asp-for="@Model.RegPassword"></label>*@
    <input asp-for="@Model.RegPassword" placeholder="Lösenord"/>
    <span asp-validation-for="@Model.RegPassword"></span>
    <br />
    @*<label asp-for="@Model.ClassroomName"></label>*@
    <input asp-for="@Model.ClassroomName" placeholder="Ange klassrumsnamn" />
    <span asp-validation-for="@Model.ClassroomName" placeholder="Ange klassrumsnamn"></span>
    <br />

    <input type="submit" value="Register" />
</form>


